@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" action="/Employee/SaveEdit/@Model.Id">
    <div>
        <label for="Name">Name</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" />
    </div>
    <div>
        <label for="Salary">salary</label>
        <input type="text" name="Salary" class="form-control" value="@Model.Salary" />
    </div>
    <div>
        <label for="Address">Address</label>
        <input type="text" name="Address" class="form-control" value="@Model.Address" />
    </div>
    <div>
        <label for="Image">Image</label>
        <input type="text" name="Image" class="form-control" value="@Model.Image" />
    </div>
   @* <div>
        <label for="Dept_Id">Dept_Id</label>
        <input type="text" name="Dept_Id" class="form-control" value="@Model.Dept_Id" />
    </div>*@
    <div>
        <label for="Dept_Id">Dept_Id</label>
    <select class="form-control" name="Dept_Id">
        @foreach (var item in ViewBag.dept)
        {
            if(Model.Dept_Id == item.Id){
                <option value="@item.Id" selected>@item.Name</option>
            }
            else{
                <option value="@item.Id">@item.Name</option>
            }
        }
    </select>
    </div>
    <br />
    <input type="submit" value="Save" class="btn btn-success" />
</form>
