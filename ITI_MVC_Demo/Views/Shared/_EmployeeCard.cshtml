@model Employee

<div class="card" style="width:400px;margin:2px">
    <img class="card-img-top" src="/Images/@Model.Image" alt="Card image" 
    style="width:100%">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text">@Model.Address</p>
        <a asp-action="Details" 
        asp-controller="Employee"
        asp-route-id="@Model.Id"
        class="btn btn-primary">Details</a>
    </div>
</div>